rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Recipes can be read by anyone, but only created/modified by authenticated users
    match /recipes/{recipeId} {
      allow read: if true; // Public recipes
      allow create, update, delete: if request.auth != null && 
        (resource == null || resource.data.autoreId == request.auth.uid);
    }

    // Weekly plans can only be accessed by the owner
    match /weeklyPlans/{planId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Grocery lists can only be accessed by the owner or shared users
    match /groceryLists/{listId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.auth.uid in resource.data.sharedWith);
    }

    // Ingredients are public (read-only for users, write for admins)
    match /ingredients/{ingredientId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}