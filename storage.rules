rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Recipe images can be uploaded by authenticated users
    match /recipes/{recipeId}/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null;
    }

    // User profile images can only be managed by the user
    match /users/{userId}/profile/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Ingredient images (for admin use)
    match /ingredients/{ingredientId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
